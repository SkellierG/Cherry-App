{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"jsx": "react",
		"strict": true,
		"allowImportingTsExtensions": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@utils/*": ["./src/utils/*"],
			"@assets/*": ["./assets/*"],
			"@app/*": ["./src/app/*"],
			"@screens/*": ["./src/screens/*"],
			"@services/*": ["./src/services/*"],
			"@contexts/*": ["./src/contexts/*"],
			"@types/*": ["./src/types/*"],
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
